<script language="JavaScript" type="text/javascript">
<!--

function submit_compose() {

    /* check the title, all whitespace counts as empty */
    if (document.compose.WorkOrderTitle.value.match(/^\s*$/)) {
        alert('$JSText{"A workorder must have a title!"}');
        document.compose.WorkOrderTitle.focus();

        return false;
    }

    /* check the planned start time */
    var StartYear   = document.compose.PlannedStartTimeYear.value;
    var StartMonth  = document.compose.PlannedStartTimeMonth.value;
    var StartDay    = document.compose.PlannedStartTimeDay.value;
    var StartHour   = document.compose.PlannedStartTimeHour.value;
    var StartMinute = document.compose.PlannedStartTimeMinute.value;
    if (
        0
        || isNaN(StartYear)
        || isNaN(StartMonth)
        || isNaN(StartDay)
        || isNaN(StartHour)
        || isNaN(StartMinute)
        || ( StartYear   < 999 || StartYear   > 10000 )
        || ( StartMonth  < 1   || StartMonth  > 12 )
        || ( StartDay    < 1   || StartDay    > 31 )
        || ( StartHour   < 0   || StartHour   > 23 )
        || ( StartMinute < 0   || StartMinute > 59 )
        )
    {
        alert('$JSText{"The planned start time is invalid!"}');

        return false;
    }

    /* check the planned end time */
    var EndYear   = document.compose.PlannedEndTimeYear.value;
    var EndMonth  = document.compose.PlannedEndTimeMonth.value;
    var EndDay    = document.compose.PlannedEndTimeDay.value;
    var EndHour   = document.compose.PlannedEndTimeHour.value;
    var EndMinute = document.compose.PlannedEndTimeMinute.value;
    if (
        0
        || isNaN(EndYear)
        || isNaN(EndMonth)
        || isNaN(EndDay)
        || isNaN(EndHour)
        || isNaN(EndMinute)
        || ( EndYear   < 999 || EndYear   > 10000 )
        || ( EndMonth  < 1   || EndMonth  > 12 )
        || ( EndDay    < 1   || EndDay    > 31 )
        || ( EndHour   < 0   || EndHour   > 23 )
        || ( EndMinute < 0   || EndMinute > 59 )
        )
    {
        alert('$JSText{"The planned end time is invalid!"}');

        return false;
    }

    /* check whether the planned start time is before the planned end time */
    var StartAfterEndMsg = '$JSText{"The planned start time must be before the planned end time!"}';
    if ( StartYear < EndYear ) {
        return true;
    }
    if ( StartYear > EndYear ) {
        alert(StartAfterEndMsg);

        return false;
    }

    if ( StartMonth < EndMonth ) {
        return true;
    }
    if ( StartMonth > EndMonth ) {
        alert(StartAfterEndMsg);

        return false;
    }

    if ( StartDay < EndDay ) {
        return true;
    }
    if ( StartDay > EndDay ) {
        alert(StartAfterEndMsg);

        return false;
    }

    if ( StartHour < EndHour ) {
        return true;
    }
    if ( StartHour > EndHour ) {
        alert(StartAfterEndMsg);

        return false;
    }

    if ( StartMinute < EndMinute ) {
        return true;
    }
    if ( StartMinute > EndMinute ) {
        alert(StartAfterEndMsg);

        return false;
    }

    /* the times are equal */
    alert(StartAfterEndMsg);

    return false;
}
//-->
</script>

<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            <div title="$Env{"Box0"}$Text{"Edit"} $Text{"WorkOrder#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}">
                $Env{"Box0"}$Text{"Edit"} $Text{"WorkOrder#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}
            </div>
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}$Env{"LastScreenView"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="compose">
                <input type="hidden" name="Action"    value="$Env{"Action"}">
                <input type="hidden" name="Subaction" value="Save">
                <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}">
                <table border="0" width="800" align="center" cellspacing="0" cellpadding="4">
                    <tr>
                        <td class="contenthead">$Text{"WorkOrder"}</td>
                    </tr>
                    <tr class="contentbody">
                        <td>
                            <table border="0">
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Title"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        <input type="text" name="WorkOrderTitle" value="$QData{"WorkOrderTitle"}" size="70" maxsize="250">
<!-- dtl:block:InvalidTitle -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidTitle -->
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Instruction"}:
                                    </td>
                                    <td class="contentvalue">
                                        <div>
<!-- dtl:block:RichText -->
$Include{"RichTextEditorITSM"}
<!-- dtl:block:RichText -->
                                            <textarea id="RichText1" name="Instruction" rows="15" cols="$Config{"ITSM::Frontend::TextArea"}" wrap="$Env{"BrowserWrap"}">$Data{"Instruction"}</textarea>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Planned start time"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        $Data{"PlannedStartTimeString"}
<!-- dtl:block:InvalidPlannedStartTime -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidPlannedStartTime -->
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Planned end time"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        $Data{"PlannedEndTimeString"}
<!-- dtl:block:InvalidPlannedEndTime -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidPlannedEndTime -->
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Attachment"}:
                                    </td>
                                    <td class="contentvalue">
                                        <table width="100%">
<!-- dtl:block:AttachmentRow -->
                                            <tr>
                                                <td>$Data{"AttachmentName"}</td>
                                                <td>$Data{"AttachmentSize"}</td>
<!-- TODO: set correct name for Delete button with unique name -->
                                                <td><input class="button" type="submit" name="DeleteAttachmentxxx" value="$Text{"Delete"}"></td>
                                            </tr>
<!-- dtl:block:AttachmentRow -->
                                            <tr>
                                                <td colspan="2"><input type="file" name="AttachmentNew"></td>
                                                <td width="100%"><input type="submit" class="button" name="SaveAttachment" value="$Text{"Attach"}"></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="contentfooter">
                            <input class="button" id="submitWorkOrderEdit" accesskey="g" type="submit" name="WorkOrderEdit" value="$Text{"Save"}" onclick="return submit_compose();"/>
                        </td>
                    </tr>
                </table>
            </form>
            <br>
        </td>
    </tr>
</table>
