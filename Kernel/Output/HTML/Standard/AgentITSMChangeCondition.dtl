<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            $Env{"Box0"}$Text{"Overview"}: $Text{"Conditions and Actions"} : $Text{"Change#"}: $QData{"ChangeNumber"} $Env{"Box1"}
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}$Env{"LastScreenView"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>
    <tr>
        <td class="mainbody" align="center">
            <form action="$Env{"CGIHandle"}" method="post">
                <input type="hidden" name="Action" value="$Env{"Action"}"/>
                <input type="hidden" name="Subaction" value=""/>
                <input type="hidden" name="ChangeID" value="$QData{"ChangeID"}"/>
                <input type="hidden" name="ConditionID" value="$QData{"ConditionID"}"/>
                <br/>
                <table border="0" width="800" cellspacing="0" cellpadding="4">
                    <tr class="contenthead">
                        <td class="contentkey">$Text{"Conditions and Actions"}</td>
                    </tr>
<!-- dtl:block:Overview -->
                    <tr class="contentbody">
                        <td>
                            <table width="100%" border="0" cellpadding="3" cellspacing="0">
                                <tr class="contentbody">
                                    <td class="contentkey" width="250">$Text{"Name"}</td>
                                    <td class="contentkey" width="*">$Text{"Comment"}</td>
                                    <td class="contentkey" width="100" align="center">$Text{"valid"}/$Text{"invalid"}</td>
                                    <td class="contentkey" width="150">$Text{"Changed"}</td>
                                    <td class="contentkey" width="10">&nbsp;</td>
                                </tr>
<!-- dtl:block:OverviewRow -->
                                <tr class="$QData{"CssClass"}">
                                    <td>
                                        <a href="$Env{"Baselink"}Action=AgentITSMChangeConditionEdit;ChangeID=$QData{"ChangeID"};ConditionID=$QData{"ConditionID"}">
                                        $QData{"Name"}
                                        </a>
                                    </td>
                                    <td>$Text{"$QData{"Comment"}"}</td>
                                    <td align="center">$Text{"$QData{"Valid"}"}</td>
                                    <td>$TimeLong{"$QData{"ChangeTime"}"}</td>
                                    <td width="10"><input class="button" type="submit" value="$Text{"Delete"}" name="DeleteCondition$QData{"ConditionID"}"></td>
                                </tr>
<!-- dtl:block:OverviewRow -->
                            </table>
                        </td>
                    </tr>
<!-- dtl:block:Overview -->
#                    <tr class="contenthead">
#                        <td class="contentkey">$Text{"Add"}</td>
#                    </tr>
                    <tr class="contentfooter">
                        <td align="right">
                            $Text{"Add new condition and action pair"}.&nbsp;&nbsp;
                            <input class="button" type="submit" value="$Text{"Add"}" name="AddCondition">
                        </td>
                    </tr>
                </table>
                <br/>
            </form>
        </td>
    </tr>
</table>
