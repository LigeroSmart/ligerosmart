<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            $Env{"Box0"}$Text{"Edit"} $Text{"Report of"} $Text{"Work Order#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"} $QData{"Title","70"}
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}Action=AgentITSMWorkOrderZoom&WorkOrderID=$QData{"WorkOrderID"}" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <table border="0" width="700" align="center" cellspacing="0" cellpadding="4">
                <form action="$Env{"CGIHandle"}" method="post">
                    <input type="hidden" name="Action"    value="$Env{"Action"}">
                    <input type="hidden" name="Subaction" value="Save">
                    <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}">
                    <tr>
                        <td class="contenthead">$Text{"Report"}</td>
                    </tr>
                    <tr class="contentbody">
                        <td>
                            <table border="0">
                                <tr>
                                    <td class="contentkey">$Text{"Report"}:</td>

                                    <td class="contentvalue">
                                        <div class="yui-skin-sam">
<!-- dtl:block:RichText -->
$Include{"RichTextEditor"}
# set white background for buttons
<style type="text/css">
<!--
                                            .yui-skin-sam .yui-toolbar-container { background-color: #FFFFFF; }
                                            -->
                                            </style>
<!-- dtl:block:RichText -->
<textarea id="RichText" name="Report" rows="15" cols="$Config{"Ticket::Frontend::TextAreaEmail"}" wrap="$Env{"BrowserWrap"}">
$Data{"Report"}
</textarea>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%" class="contentkey">$Text{"State"}:</td>
                                    <td width="75%" class="contentvalue"><input type="text" name="State" value="$QData{"State"}" size="60"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="contentfooter">
                            <input class="button" type="submit" name="Submit" value="$Text{"Submit"}">
                        </td>
                    </tr>
                </form>
            </table>
            <br>
        </td>
    </tr>
</table>