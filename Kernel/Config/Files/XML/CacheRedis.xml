<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="2.0" init="Config">
    <Setting Name="Cache::Redis###Server" Required="1" Valid="1">
        <Description Translatable="1">Redis server address. Example: cache:6379.</Description>
        <Navigation>Core::Cache</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">cache:6379</Item>
        </Value>
    </Setting>
    <Setting Name="Cache::Redis###DatabaseNumber" Required="1" Valid="1">
        <Description Translatable="1">Use specified Redis logical database.</Description>
        <Navigation>Core::Cache</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="\d">0</Item>
        </Value>
    </Setting>
    <Setting Name="Cache::Redis###RedisFast" Required="1" Valid="1">
        <Description Translatable="1">Use Redis::Fast instead of Redis.</Description>
        <Navigation>Core::Cache</Navigation>
        <Value>
            <Item ValueType="Checkbox">0</Item>
        </Value>
    </Setting>
</otrs_config>